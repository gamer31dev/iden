{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/gamer31dev/iden/main/Supercell/ClashRoyale/proof-of-reputation.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/gamer31dev/iden/main/Supercell/ClashRoyale/proof-of-reputation.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array",
        "object"
      ]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": [
        "string",
        "array"
      ],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": [
        "string",
        "object"
      ],
      "format": "uri",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "PlayerLevel"
      ],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "expLevel": {
          "type": "integer"
        },
        "trophies": {
          "type": "integer"
        },
        "bestTrophies": {
          "type": "integer"
        },
        "wins": {
          "type": "integer"
        },
        "losses": {
          "type": "integer"
        },
        "battleCount": {
          "type": "integer"
        },
        "threeCrownWins": {
          "type": "integer"
        },
        "challengeCardsWon": {
          "type": "integer"
        },
        "challengeMaxWins": {
          "type": "integer"
        },
        "tournamentCardsWon": {
          "type": "integer"
        },
        "tournamentBattleCount": {
          "type": "integer"
        },
        "donations": {
          "type": "integer"
        },
        "donationsReceived": {
          "type": "integer"
        },
        "totalDonations": {
          "type": "integer"
        },
        "warDayWins": {
          "type": "integer"
        },
        "clanCardsCollected": {
          "type": "integer"
        },
        "arenaName": {
          "type": "string"
        },
        "arenaId": {
          "type": "integer"
        },
        "badgesCount": {
          "type": "integer"
        },
        "achievementsCount": {
          "type": "integer"
        },
        "cardsCount": {
          "type": "integer"
        },
        "starPoints": {
          "type": "integer"
        },
        "expPoints": {
          "type": "integer"
        },
        "totalExpPoints": {
          "type": "integer"
        }
      }
    }
  }
}