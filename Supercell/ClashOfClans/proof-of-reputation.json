{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/gamer31dev/iden/main/Supercell/ClashOfClans/proof-of-reputation.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/gamer31dev/iden/main/Supercell/ClashOfClans/proof-of-reputation.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array",
        "object"
      ]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": [
        "string",
        "array"
      ],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": [
        "string",
        "object"
      ],
      "format": "uri",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "playerLevel",
        "playerTrophies"
      ],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "playerLevel": {
          "type": "integer"
        },
        "playerTrophies": {
          "type": "integer"
        },
        "townHallLevel": {
          "type": "integer"
        },
        "builderHallLevel": {
          "type": "integer"
        },
        "attackWins": {
          "type": "integer"
        },
        "defenseWins": {
          "type": "integer"
        },
        "leagueID": {
          "type": "integer"
        },
        "AchievementsCount": {
          "type": "integer"
        },
        "TroopsCount": {
          "type": "integer"
        },
        "HeroesCount": {
          "type": "integer"
        },
        "SpellsCount": {
          "type": "integer"
        },
        "Donations": {
          "type": "integer"
        },
        "DonationsReceived": {
          "type": "integer"
        },
        "HasClan": {
          "type": "integer"
        },
        "ClanLevel": {
          "type": "integer"
        }
      }
    }
  }
}